<!DOCTYPE html>
<html ng-app="fetch">
<head>
<title>AngularJS GET request with PHP</title>
         <link rel="stylesheet" href="../styles/bootstrap.css">
        <script src="../scripts/angular.js"></script>
</head>

<body>
<br>
  <div class="row">
    <div class="container">
      <h1>Angular $http GET Ajax Call</h1>
      <div ng-controller="dbCtrl">
      <input type="text" ng-model="searchFilter" class="form-control">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>Roll No</th>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="record in data | filter:searchFilter">
					<td>{{record.Name}}</td>
					<td>{{record.RollNo}}</td>
				</tr>
			</tbody>
		</table>
      </div>
    </div>
  </div>
</body>

<script>
	var fetch = angular.module('fetch', []);

	fetch.controller('dbCtrl', ['$scope', '$http', function ($scope, $http) {
		$http.get("fetch.php")
			.success(function(data){
				$scope.data = data;
			})
			.error(function() {
				$scope.data = "error in fetching data";
			});
	}]);
		
</script>

</html>
